<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:descendantFocusability="beforeDescendants"
        android:focusableInTouchMode="true"
        android:id="@+id/qwewqeqwe">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:stretchColumns="*">

                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/name"
                        android:textSize="20sp"
                        android:id="@+id/activityTitleLabel"
                        android:focusable="false"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentLeft="true" />

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/activityTitle"
                        android:layout_toRightOf="@+id/activityTitleLabel"
                        android:layout_alignBottom="@+id/activityTitleLabel"
                        android:layout_alignParentTop="true"
                        android:layout_span="3"
                        android:layout_marginLeft="5dp" />
                </TableRow>

                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:background="#1e1e1e">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/main_picture"
                        android:textSize="20sp"
                        android:id="@+id/pictureLabel"
                        android:layout_below="@+id/activityTitleLabel"
                        android:layout_alignParentLeft="true" />

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:id="@+id/picture"
                        android:visibility="invisible"
                        android:layout_below="@+id/activityTitle"
                        android:layout_toRightOf="@+id/pictureLabel"
                        android:layout_marginLeft="5dp" />

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:id="@+id/removePictureIcon"
                        android:visibility="invisible"
                        android:onClick="removePicture"
                        android:src="@drawable/x_mark"
                        android:layout_alignTop="@+id/pictureLabel"
                        android:layout_toRightOf="@+id/activityNumber" />

                    <Button
                        android:layout_width="wrap_content"
                        android:textSize="15dp"
                        android:layout_height="wrap_content"
                        android:text="@string/btn_set_picture"
                        android:onClick="setPicture"
                        android:id="@+id/button"
                        android:layout_alignTop="@+id/removePictureIcon"
                        android:layout_alignParentRight="true" />
                </TableRow>

                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/time"
                        android:textSize="20sp"
                        android:id="@+id/timeLabel"
                        android:layout_below="@+id/picture"
                        android:layout_alignParentLeft="true" />

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:inputType="time"
                        android:ems="10"
                        android:id="@+id/timerTime"
                        android:layout_alignTop="@+id/timeLabel"
                        android:layout_toRightOf="@+id/timeLabel"
                        android:layout_marginLeft="5dp"
                        android:layout_span="3" />
                </TableRow>

                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:divider="#b5b5b5"
                    android:dividerPadding="1dp"
                    android:background="#1e1e1e">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/activity_number"
                        android:textSize="20sp"
                        android:id="@+id/activityNumberLabel"
                        android:layout_alignTop="@+id/activityNumber"
                        android:layout_alignParentLeft="true" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textSize="20dp"
                        android:id="@+id/activityNumber"
                        android:layout_below="@+id/timerTime"
                        android:layout_toRightOf="@+id/activityNumberLabel"
                        android:layout_marginLeft="5dp"
                        android:layout_span="2" />

                    <Button
                        android:layout_width="wrap_content"
                        android:textSize="15dp"
                        android:layout_height="wrap_content"
                        android:text="@string/btn_manage_activities"
                        android:onClick="activityManageClick"
                        android:id="@+id/button3"
                        android:layout_below="@+id/pictureLabel"
                        android:layout_alignLeft="@+id/button" />
                </TableRow>

                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:divider="#b5b5b5"
                    android:contextClickable="true"
                    android:dividerPadding="10dp"
                    android:clickable="true">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/sound"
                        android:textSize="20sp"
                        android:id="@+id/soundLabel"
                        android:layout_below="@+id/activityNumberLabel"
                        android:layout_alignParentLeft="true" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:id="@+id/playSoundIcon"
                        android:onClick="playSound"
                        android:visibility="invisible"
                        android:layout_toRightOf="@+id/soundLabel"
                        android:src="@drawable/aoundtube"
                        android:layout_below="@+id/activityNumberLabel"
                        android:layout_marginLeft="5dp" />

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:id="@+id/removeSoundIcon"
                        android:visibility="invisible"
                        android:onClick="removeSound"
                        android:src="@drawable/x_mark"
                        android:layout_alignTop="@+id/playSoundIcon"
                        android:layout_alignRight="@+id/timerTime" />

                    <Button
                        android:layout_width="wrap_content"
                        android:textSize="15dp"
                        android:layout_height="wrap_content"
                        android:text="@string/btn_set_sound"
                        android:id="@+id/setSoundButton"
                        android:onClick="setSound"
                        android:layout_below="@+id/timerTime"
                        android:layout_alignParentRight="true" />
                </TableRow>

            </TableLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:layout_width="match_parent"
                    android:textSize="15sp"
                    android:layout_height="wrap_content"
                    android:text="@string/btn_save"
                    android:onClick="saveTemplate"
                    android:id="@+id/saveActivityButton"
                    android:layout_alignParentTop="true" />

            </RelativeLayout>
        </LinearLayout>

    </RelativeLayout>
</ScrollView>