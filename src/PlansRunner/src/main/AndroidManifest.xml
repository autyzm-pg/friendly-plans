<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.example.przyjaznyplan">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/planicon"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">

        <activity android:label="@string/app_name"
                  android:screenOrientation="landscape"
                  android:configChanges="orientation|keyboardHidden"
                  android:name="com.przyjaznyplanDisplayer.PlanActivityView">
            <intent-filter>
                <category android:name="android.intent.category.LAUNCHER" />
                <action android:name="android.intent.action.MAIN" />
            </intent-filter>
    	</activity>

        <activity android:screenOrientation="landscape" android:configChanges="orientation|keyboardHidden" android:name="com.przyjaznyplanDisplayer.ActivityView" />
        <activity android:screenOrientation="landscape" android:configChanges="orientation|keyboardHidden" android:name="com.przyjaznyplanDisplayer.ActivityGalleryView" />
        <activity android:screenOrientation="landscape" android:configChanges="orientation|keyboardHidden" android:name="com.przyjaznyplanDisplayer.BreakTimeView" />
        <activity android:screenOrientation="landscape" android:configChanges="orientation|keyboardHidden" android:name="com.przyjaznyplanDisplayer.AdvancedActivityView" />
        <activity android:screenOrientation="landscape" android:configChanges="orientation|keyboardHidden" android:name="com.przyjaznyplanDisplayer.BasicActivityView" />
        <activity android:screenOrientation="landscape" android:configChanges="orientation|keyboardHidden" android:name="com.przyjaznyplanDisplayer.FinalView" />

        <provider android:authorities="com.example.przyjaznyplan.contentprovider"
                  android:name="com.przyjaznyplanDisplayer.ContentProvider.DbContentProvider"
                  android:multiprocess="true" />

    </application>
</manifest>
